<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="prepare_questions_qweb">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="row mb32">
                            <div class="col-xs-12">
                                <h2 class="text-center">Question Paper</h2>
                            </div>
                        </div>
                        <div class="row mb32" style="margin: 10mm 10mm 30mm 10mm;">
                            <div class="col-xs-6">
                                <p>
                                    <strong>ISP NAME:</strong>
                                    <span>BEE Connection</span>
                                    <br/>
                                    <strong>Type of ISP:</strong>
                                    <span>Zonal ISP</span>
                                    <br/>
                                    <strong>Permitted Area/Thana:</strong>
                                    <span>South West Zone</span>
                                    <br/>
                                </p>
                            </div>
                            <div class="col-xs-5 col-xs-offset-1">
                                <p>
                                    <strong>Reporting Month:</strong>
                                    <span t-esc="data['start_date']"/>
                                    <br/>
                                    <strong>Year:</strong>
                                    <span t-esc="data['end_date']"/>

                                </p>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr colspan="4" style="background-color: #EFECEB;">
                                    <th class="text-center">S.N</th>
                                    <th class="text-center">Word</th>
                                    <th class="text-center">Meaning</th>

                                </tr>
                            </thead>
                            <tbody>


                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </template>
        <report id="action_report_prepare_questions"
                string="Question Paper"
                model="exam.questions"
                report_type="qweb-pdf"
                name="opa_question.prepare_questions_qweb"
                file="opa_question.prepare_questions_qweb"/>
    </data>
</openerp>