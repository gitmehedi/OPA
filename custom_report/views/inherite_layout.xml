<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <template id="report_quotation_header" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row" style="background-color: #E6E6E6; padding-top:10px;">
                        <div class="col-xs-3">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                 style="max-height: 80px;"/>
                        </div>
                        <!--<div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>-->
                        <div class="col-xs-6" style="text-align:center; font-size: 16px;">
                            <strong>
                                <div t-field="company.partner_id"
                                     t-field-options='{"widget": "contact", "fields": ["name"], "no_marker": true}'/>
                            </strong>
                        </div>

                        <div class="col-xs-3" style="text-align:right;">
                            <div t-field="company.partner_id"
                                 t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                        </div>
                    </div>

                </div>
                <div style="clear: both;"></div>
            </xpath>
        </template>


        <template id="report_quotation_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="text-left" style="border-top: 1px solid #6E6E6E;, padding-top: 2px;">

                        <div t-if="not company.custom_footer" class="pull-left">

                            <div t-if="company.phone">Phone:
                                <span t-field="company.phone"/>
                            </div>

                            <div t-if="company.fax and company.phone">&amp;bull;</div>
                            <div t-if="company.fax">Fax:
                                <span t-field="company.fax"/>
                            </div>

                            <div t-if="company.email">&amp;bull;</div>
                            <div t-if="company.email">Email:
                                <span t-field="company.email"/>
                            </div>

                            <div t-if="company.website">&amp;bull;</div>
                            <div t-if="company.website">Website:
                                <span t-field="company.website"/>
                            </div>
                            <div>Print Time:
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                            </div>

                        </div>

                        <t t-if="company.custom_footer">
                            <span t-raw="company.rml_footer"/>
                        </t>
                        <div class="pull-right">
                            <ul class="list-inline">
                                <li>Page:</li>
                                <li>
                                    <span class="page"/>
                                </li>
                                <li>/</li>
                                <li>
                                    <span class="topage"/>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
